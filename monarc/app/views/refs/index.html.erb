<p id="notice"><%= notice %></p>

<h1>Referencess</h1>
<%= will_paginate @refs %>
<table>
  <thead>
    <tr>
      <th>Ref_id</th>
      <th>Title</th>
      <th>Url</th>
      <th>Document</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @refs.each do |ref| %>
      <tr>
        <td><%= ref.ref_id %></td>
        <td><%= ref.title %></td>
        <td><%= link_to ref.url %></td>
        <td><%= ref.document %></td>
        <td><%= link_to 'Show', ref %></td>
        <td><%= link_to 'Edit', edit_ref_path(ref) %></td>
        <td><%= link_to 'Destroy', ref, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Ref', new_ref_path, method: :get  %>

<script>
    $(document).ready(function() {
    $('#myDataTable').DataTable( {
    	"order": [[ 2, "asc" ]],
    	dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ]
    } );
} );
</script>