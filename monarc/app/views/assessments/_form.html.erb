	</div>
<% end %>

<% if (@requirement != nil) %>
	<div class="field">
	    <%= form.label :requirement %>
	    <%= @requirement.name %>
	    <%= form.hidden_field(:requirement_id, :value => @requirement.id) %>
	</div>
<% end %>


  <div class="field">
    <%= form.label :method %>
    
	<%= form.select(:method, [["EXAMINE","EXAMINE"],["INTERVIEW","INTERVIEW"],["TEST","TEST"]], {}) %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
