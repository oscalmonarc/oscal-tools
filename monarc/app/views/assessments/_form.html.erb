      <ul>
      <% assessment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% if (@security_control != nil) %>
	<div class="field">
	    <%= form.label :security_control %>
	    <%= @security_control.control_id %>
