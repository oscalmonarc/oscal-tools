<%= form_with(model: provider, local: true) do |form| %>
  <% if provider.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(provider.errors.count, "error") %> prohibited this provider from being saved:</h2>

      <ul>
      <% provider.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  
   <div class="field">
    <% tmparray = Provider.all.map { |provider| [provider.name , provider.id] }
    	provider_array = []
    	provider_array << ["", nil]
    	tmparray.each do |tmp|
    		provider_array << tmp
    	end
     %>
    <%= form.label "Parent Provider" %>
    <%= form.select :parent_id, options_for_select(provider_array  , provider.parent_id) %>
   </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :org_type %>
    <%= form.text_field :org_type %>
  </div>
  
  
    

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
