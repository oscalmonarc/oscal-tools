<table id="control_implementations_table"  class="table table-striped table-bordered"  style="width:100%">
			<thead>
			  <th >Security control</th>
			  <th >Security policy</th>
		      <th >Component</th>
		      <th >Provider</th>
		      <th >Domain</th>
		      <th >Inheritance Type</th>
		      <th >Implementation method</th>
		      <th >Required</th>
			</thead>
			<tbody>
				<% 
				counter = 0
				methods.each do |the_method|
				domains = ""
				if (the_method[:domain_environment] != nil)
					domains = the_method[:domain_environment]
				end 
				counter = counter + 1
				%>
					<tr>
					  <td><%= the_method[:security_control] %></td>
					  <td><%= the_method[:security_policy] %></td>
					  <td><%= the_method[:component] %></td>
					  <td><%= the_method[:provider] %></td>
					  <td><%= domains.html_safe %></td>
					  <td><%= the_method[:inheritance_type] %></td>
					  <td>
					  	<%= show_more(the_method[:implementation_method], counter) %> 
					  </td>
					  <td><%= the_method[:required] %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
<script>
	$(document).ready(function() {
	    $('#control_implementations_table').DataTable( {
	    	dom: 'Bfrtip',
	        buttons: [
	            'copy', 'csv', 'excel', 'pdf', 'print'
	        ]
	    } );
	} );
</script>