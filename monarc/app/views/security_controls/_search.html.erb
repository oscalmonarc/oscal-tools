<% if @search_status %>
	<div id="search_table" style="display: block;">
<% else %>
	<div id="search_table" style="display: none;">
<% end %>
 	<button id="showAPI" onclick="showAPI()"> Switch to API </button>
 	<%= search_form_for @q do |f| %>	
		<table>
			<tr>
		  		<td>
				  	<%= f.label "Policy Name" %>
				  	<%= f.search_field :security_policy_name_cont %>
				</td>
				<td>
		  			<%= f.label "Version" %>
		  			<%= f.search_field :security_policy_version_cont %>
		  		</td>
		  		<td>
		  			<%= f.label "Family Title"%>
		  			<%= f.search_field :security_control_family_family_cont %>
		  		</td>
		  		<td>
		  			<%= f.label "Family abv"%>
		  			<%= f.search_field :security_control_family_abv_cont %>
		  		</td>
		  		<td> 
		  			<%= f.label "Control ID" %>
		  			<%= f.search_field :control_id_cont %>
		  		</td>  
		  		<td>
		  			<%= f.label "Control Title" %>
		  			<%= f.search_field :title_cont %>
		  		</td>
				<td>
		  			<br>
		  			<%= f.submit "search"%>
		  		</td>
		  	</tr>
		</table>
	<% end %>
 </div>